<h1><%= @place.name %></h1>

<ul>
    <% for zebra in @place.posts %>
        <li>
            <%= zebra.title %> ,
            <%= zebra.posted_on %> ,
            <%= zebra.description %>
        </li>
    <% end %>
</ul>

<a href="/posts/new?place_id=<%= @place.id %>">New Post</a>

<a href="/places">Back to all places</a>